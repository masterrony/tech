    "babel-preset-es2015": "^6.24.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.15.4",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.0.1",
    "mongodb": "^2.2.31",
    "mongodb-migrate": "^2.0.2",
    "mongodb-migrations": "^0.8.5",
    "mongoose": "^5.7.5",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-unique-validator": "^1.0.6",
