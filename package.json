{
  "name": "express-es6-boilerplate",
  "version": "1.0.0",
  "description": "Node Application based on express js with es6 and integrated with mongodb",
  "main": "dist/app.js",
  "scripts": {
    "start": "run-p db server",
    "build-dev": "babel --watch src --out-dir dist --source-maps",
